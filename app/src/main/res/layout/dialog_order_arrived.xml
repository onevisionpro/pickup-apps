<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools">

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="16dp"
        app:cardElevation="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:paddingStart="8dp"
            android:paddingEnd="8dp">

            <TextView
                style="@style/TextTitle"
                android:fontFamily="@font/metropolis_bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:text="Pesanan telah Sampai" />

            <TextView
                style="@style/TextSubTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:fontFamily="@font/metropolis_bold"
                android:text="Nomor Pesanan:" />

            <TextView
                android:id="@+id/tv_order_id"
                style="@style/TextSubTitle"
                android:layout_width="match_parent"
                android:fontFamily="@font/metropolis_bold"
                android:textAlignment="center"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:text="#123-123123-123" />

            <TextView
                android:id="@+id/tv_message"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_marginEnd="12dp"
                android:layout_marginTop="24dp"
                android:textAlignment="center"
                android:fontFamily="@font/metropolis_medium"
                android:textSize="16sp"
                tools:text="Order berhasil di proses, Silakan info ke Mitra untuk menyelesaikan Order" />

            <Button
                android:id="@+id/btn_back_to_home"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/ButtonRoundedPrimary"
                android:text="Kembali ke Beranda"
                android:layout_marginTop="40dp"
                android:layout_marginStart="8dp"
                android:layout_marginBottom="40dp"
                android:layout_marginEnd="8dp"/>

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

</RelativeLayout>