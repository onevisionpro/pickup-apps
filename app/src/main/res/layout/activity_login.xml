<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout_parent"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".presentation.login.LoginActivity">

    <LinearLayout
        android:id="@+id/tv_gopickup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        tools:viewBindingIgnore="true">

        <!-- go pickup-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_go"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:letterSpacing="0.05"
                android:text="GO"
                android:textColor="@color/redPrimary"
                android:textSize="28sp"
                android:textStyle="bold"
                tools:viewBindingIgnore="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_toEndOf="@id/tv_go"
                android:letterSpacing="0.05"
                android:text=" Pickup"
                android:textColor="@color/black"
                android:textSize="28sp"
                android:textStyle="bold"
                tools:viewBindingIgnore="true" />

        </LinearLayout>

        <!-- telkom warehouse supply-->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_gopickup"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="8dp"
            android:letterSpacing="0.1"
            android:text="TELKOM WAREHOUSE SUPPLY"
            android:textSize="12sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="48sp"
                android:text="Login"
                android:textColor="@color/black"
                android:textSize="28sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Add your details to login" />

        </LinearLayout>


        <EditText
            android:id="@+id/edt_email"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="8dp"
            android:background="@drawable/bg_edt_rounded_gray"
            android:hint="Your Email"
            android:textCursorDrawable="@drawable/color_cursor"
            android:paddingStart="32dp"
            android:paddingEnd="32dp"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/edt_password"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="8dp"
            android:textCursorDrawable="@drawable/color_cursor"
            android:background="@drawable/bg_edt_rounded_gray"
            android:hint="Password"
            android:inputType="textPassword"
            android:paddingStart="32dp"
            android:paddingEnd="32dp"
            android:textSize="16sp" />

        <Button
            android:id="@+id/btn_login"
            style="@style/ButtonRoundedPrimary"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            android:text="Login" />

    </LinearLayout>

    <ProgressBar
        android:id="@+id/progress_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:visibility="gone" />

</RelativeLayout>